- content_for :page_header do
  %h2
    Edit Entity
    &nbsp;
    = back_button back_path

= render "admin/anything/shared/edit_collection_container", resource: collection_record do
  = admin_button 'New View', new_admin_anything_collection_view_path(collection_record), icon: 'playlist_add'

  %table.table.table-striped
    %thead
      %tr
        %th Title
        %th Type
        %th Fields
        %th Actions
    %tbody.folders-list
      - collection_record.views.each do |view|
        %tr
          %td
            %span= view.title
          %td
            %span= Anything::View::TYPES[view.view_type]
          %td
            - view.fields.each do |field|
              %span= field.title
          %td
            = edit_button edit_admin_anything_collection_view_path(collection_record, view)
            = delete_button admin_anything_collection_view_path(collection_record, view)
